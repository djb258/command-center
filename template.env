# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/bridge.log
ENABLE_DEBUG_MODE=false

# Security Configuration
ENABLE_API_KEY_ROTATION=false
API_KEY_ROTATION_INTERVAL=24h
ENABLE_REQUEST_LOGGING=false 