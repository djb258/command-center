{
  "name": "cursor-blueprint-enforcer",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "command-center",
    "mapping-agent"
  ],
  "scripts": {
    "dev:command-center": "cd command-center && npm run dev",
    "dev:mapping-agent": "cd mapping-agent && npm run dev",
    "build:command-center": "cd command-center && npm run build",
    "build:mapping-agent": "cd mapping-agent && npm run build",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "lint:all": "npm run lint --workspaces",
    "test:all": "npm run test --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
